<Window x:Class="Biblioteka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblioteka"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF232323">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>-->
        <Rectangle Stroke="#00000000" Fill="#FF191919"/>
        <Button Grid.Column="0" Content="Add..." HorizontalAlignment="Stretch" Margin="0,100,0,0" VerticalAlignment="Top" Background="#00232323" Height="36" Width="148" BorderBrush="#00232323" Foreground="#FFD1D1D1" FontFamily="Arial Rounded MT Bold" FontSize="16" FontWeight="Normal" FontStyle="Normal" Click="Button_Click"/>
        <DataGrid Grid.Column="1" Background="#FF232323" Foreground="#FFD1D1D1" BorderBrush="{x:Null}" />



    </Grid>
</Window>
